<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="40dp"
    android:paddingEnd="40dp"
    tools:background="@color/colorDlgBg">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_gravity="end"
        android:layout_marginBottom="@dimen/dp_10"
        android:padding="@dimen/dp_5"
        android:src="@drawable/ic_close"
        android:visibility="gone"
        app:tint="@color/white"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/contents_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_top"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="9sp"
            android:textColor="@color/colorText3"
            android:textSize="19sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:textColor="@color/colorText3"
            android:textSize="14sp"
            android:textStyle="normal" />

        <View
            android:id="@+id/v_toolbar_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginTop="@dimen/dp_19"
            android:background="@color/colorSeparator"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/h_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_h_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_weight="1"
            android:background="@drawable/reactive_next_button_big_enabled_sub"
            android:fontFamily="sans-serif"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="7sp"
            android:paddingStart="@dimen/dp_5"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/colorDialogBtnText"
            android:textSize="16sp"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_h_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_weight="1"
            android:background="@drawable/shape_rounded1"
            android:fontFamily="sans-serif"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="7sp"
            android:paddingStart="@dimen/dp_5"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/colorDialogBtnText"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/v_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_bottom"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_v_negative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/reactive_next_button_big_enabled_sub"
            android:fontFamily="sans-serif"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="7sp"
            android:paddingStart="@dimen/dp_5"
            android:paddingTop="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_14"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_v_positive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_rounded1"
            android:fontFamily="sans-serif"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="7sp"
            android:paddingStart="@dimen/dp_5"
            android:paddingTop="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_14"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
